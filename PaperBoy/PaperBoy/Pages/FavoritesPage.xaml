<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperBoy.Pages.FavoritesPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="icon_refresh.png" Command="{StaticResource RefreshNewsCommand}" CommandParameter="Favorites" Text="Refresh" Order="Primary"/>
    </ContentPage.ToolbarItems>

    <ListView
        x:Name="newsListView"
        ItemTapped="OnItemTapped"
        HasUnevenRows="True"
        IsRefreshing="{Binding IsBusy}"
        ItemsSource="{Binding Favorites}"
        Margin="20">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                       
                        <Image Margin="5"
                               HeightRequest="100"
                               WidthRequest="100"
                               Grid.RowSpan="2"
                               Source="{Binding ImageUrl}"
                               Grid.Column="0"
                               Grid.Row="0"/>
                        <Label FontSize="Medium"
                               Style="{DynamicResource ListTitleStyle}"
                               Grid.Column="1"
                               Grid.Row="0"
                               Margin="0,5,0,0"
                               FontAttributes="{Binding Title,Converter={StaticResource LableFontWeightConverter}}"
                               Text="{Binding Title}"/>
                        <Label VerticalTextAlignment="Start"
                               Style="{DynamicResource ListDescriptionStyle}"
                               VerticalOptions="Start"
                               Grid.Column="1"
                               Grid.Row="1"
                               Text="{Binding Description}"/>
                        <Label VerticalOptions="Start" 
                               Margin="0,5" 
                               FontSize="Micro" 
                               Grid.Column="1" 
                               Grid.Row="2"
                               Text="{Binding ArticleDate,Converter={StaticResource AgoLabelConverter}}"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>
</ContentPage>