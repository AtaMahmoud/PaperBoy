<?xml version="1.0" encoding="utf-8" ?>
<resources>

   <style name="Theme.Splash" parent ="Theme.AppCompat.Light">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  
  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/apptheme_color</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/apptheme_color</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/apptheme_color</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="android:colorActivatedHighlight">@color/list_highlight_color</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>
  
  <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
    <item name="android:minHeight">4dip</item>
    <item name="android:maxHeight">4dip</item>
    <item name="android:thumb">@drawable/slider_thumb</item>
    <item name="android:progressDrawable">@drawable/slider_progress</item>
  </style>
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/apptheme_color</item>
  </style>
</resources>
